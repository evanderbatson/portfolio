{% extends '/_layouts/base' %}

{% block content %}

<!--            -->
<!--   Header   -->
<!--            -->

    <header class="page-header">
        <div class="header-container">
            <h1 class="page-title">
                {{ entry.pageTitle }}
            </h1>
        </div>
    </header>

<!--              -->
<!--   Services   -->
<!--              -->

    <section class="services-card">
        {% if entry.servicesTable | length %}
        <div class="services-container">
                {% for row in entry.servicesTable %}
                    <div class="service-description">
                        <h3>{{ row.serviceName }}</h3>
                        <h3 class="glass">{{ row.serviceDescription }}</h3>
                    </div>
                    <h3 class="service-rate glass">{{ row.serviceRate }}</h3>
                {% endfor %}
        </div>  
        {% endif %}
    </section>

{% endblock %}
